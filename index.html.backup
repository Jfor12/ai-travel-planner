                        LinkedIn
                    </a>
                </div>
            </div>
            <p style="font-size: 0.9em; opacity: 0.8; margin-top: 10px;">
                ¬© 2025 AI Travel Planner ¬∑ Powered by AI
            </p>
        </footer>
    </div>

    <script>
        // Configuration - automatically detects the right URL for GitHub Codespaces
        let API_URL;
        if (window.location.hostname.includes('app.github.dev')) {
            // GitHub Codespaces - replace port 3000 with 8000
            API_URL = window.location.origin.replace('-3000.', '-8000.');
        } else if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
            API_URL = 'http://localhost:8000';
        } else {
            // Production - Google Cloud Run backend
            API_URL = 'https://ai-travel-planner-815578147202.europe-west1.run.app';
        }

        // DOM Elements
        const destInput = document.getElementById('destination');
        const monthInput = document.getElementById('month');
        const generateBtn = document.getElementById('generateBtn');
        const myTripsBtn = document.getElementById('myTripsBtn');
        const contentArea = document.getElementById('contentArea');
        const alertContainer = document.getElementById('alertContainer');

        // Event Listeners
        generateBtn.addEventListener('click', handleGenerate);
        myTripsBtn.addEventListener('click', showMyTrips);
        destInput.addEventListener('change', () => {
            if (destInput.value && monthInput.value) generateBtn.style.animation = 'pulse 0.5s';
        });
        monthInput.addEventListener('change', () => {
            if (destInput.value && monthInput.value) generateBtn.style.animation = 'pulse 0.5s';
        });

        async function handleGenerate() {
            const destination = destInput.value.trim();
            const month = monthInput.value.trim();

            if (!destination || !month) {
                showAlert('Please select both destination and month', 'error');
                return;
            }

            generateBtn.disabled = true;
            showLoading();
            clearAlerts();

            try {
                const response = await fetch(`${API_URL}/api/generate-intel`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        destination: destination,
                        month: month
                    })
                });

                if (!response.ok) {
                    const error = await response.json();
                    if (response.status === 429) {
                        throw new Error('‚è±Ô∏è Rate limit reached! You can generate 5 new guides per hour. Try viewing saved trips or wait a bit.');
                    }
                    throw new Error(error.detail || 'Failed to generate guide');
                }

                const data = await response.json();
                displayResults(data);
                
                if (data.cached) {
                    showAlert(`‚ö° Guide loaded from cache for ${destination}! (Instant & free - no API costs)`, 'success');
                } else {
                    showAlert(`‚úÖ New guide generated for ${destination}!`, 'success');
                }

            } catch (error) {
                console.error('Error:', error);
                showAlert(`${error.message}`, 'error');
            } finally {
                generateBtn.disabled = false;
            }
        }

        function showLoading() {
            contentArea.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Generating your travel guide...</p>
                </div>
            `;
        }

        function displayResults(data) {
            const mapHtml = `<div id="map"></div>`;
            const intelHtml = `
                <div>
                    <div class="intel-section">
                        <h2>${data.destination} - ${data.month}</h2>
                        <div class="intel-content">
                            ${markdownToHtml(data.intel)}
                        </div>
                        ${data.locations.length > 0 ? `
                            <div class="location-list">
                                <h3>üìç Locations (${data.locations.length})</h3>
                                ${data.locations.map((loc, i) => `
                                    <div class="location-item" onclick="focusLocation(${loc.lat}, ${loc.lon})">
                                        <div class="name">${loc.name}</div>
                                        <div class="coords">${loc.lat.toFixed(4)}, ${loc.lon.toFixed(4)}</div>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}
                        <div class="button-group">
                            <button onclick="saveGuide('${data.destination}', '${data.month}', \`${data.intel.replace(/`/g, '\\`').replace(/\$/g, '\\$')}\`)">üíæ Save Guide</button>
                            <button onclick="exportPDF('${data.destination}', '${data.month}', \`${data.intel.replace(/`/g, '\\`').replace(/\$/g, '\\$')}\`)">üìÑ Export PDF</button>
                        </div>
                        <div class="chat-section">
                            <h3>Ask a Question</h3>
                            <div class="chat-group">
                                <input 
                                    type="text" 
                                    id="chatInput" 
                                    placeholder="Ask about the guide..."
                                    data-guide="${encodeURIComponent(data.intel)}"
                                >
                                <button onclick="sendChat(this)">Ask</button>
                            </div>
                            <div id="chatResponse"></div>
                        </div>
                    </div>
                </div>
            `;

            contentArea.innerHTML = mapHtml + intelHtml;

            // Initialize map after DOM update
            setTimeout(() => {
                if (data.locations.length > 0) {
                    initializeMap(data.locations);
                } else {
                    document.getElementById('map').innerHTML = '<p style="padding: 20px; text-align: center; color: #999;">No locations found in the guide</p>';
                }
            }, 0);
        }

        function initializeMap(locations) {
            const mapElement = document.getElementById('map');
            if (!mapElement) return;

            const center = [locations[0].lat, locations[0].lon];
            const map = L.map('map').setView(center, 12);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '¬© OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);

            locations.forEach(loc => {
                const marker = L.marker([loc.lat, loc.lon])
                    .bindPopup(`<b>${loc.name}</b><br>${loc.lat.toFixed(4)}, ${loc.lon.toFixed(4)}`)
                    .addTo(map);
            });

            // Auto zoom to fit all markers
            if (locations.length > 1) {
                const group = new L.featureGroup(
                    locations.map(loc => L.marker([loc.lat, loc.lon]))
                );
                map.fitBounds(group.getBounds().pad(0.1));
            }
        }

        function focusLocation(lat, lon) {
            const mapElement = document.getElementById('map');
            if (mapElement && mapElement._leaflet_map) {
                mapElement._leaflet_map.setView([lat, lon], 15);
            }
        }

        async function sendChat(button) {
            const chatInput = document.getElementById('chatInput');
            const question = chatInput.value.trim();
            const encodedGuide = chatInput.dataset.guide;
            const guideText = decodeURIComponent(encodedGuide);

            if (!question) {
                showAlert('Please enter a question', 'error');
                return;
            }

            button.disabled = true;
            const responseDiv = document.getElementById('chatResponse');
            responseDiv.innerHTML = '<div class="loading" style="padding: 20px;"><div class="spinner" style="margin: 0 auto 10px;"></div>Thinking...</div>';

            try {
                const response = await fetch(`${API_URL}/api/chat`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        guide_text: guideText,
                        user_query: question
                    })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.detail || 'Failed to get response');
                }

                const data = await response.json();
                responseDiv.innerHTML = `<div class="chat-response">${data.response}</div>`;
                chatInput.value = '';

            } catch (error) {
                responseDiv.innerHTML = `<div class="error">Error: ${error.message}</div>`;
            } finally {
                button.disabled = false;
            }
        }

        async function saveGuide(destination, month, guideText) {
            try {
                const response = await fetch(`${API_URL}/api/save-itinerary`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        destination: destination,
                        month: month,
                        guide_text: guideText
                    })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.detail || 'Failed to save guide');
                }

                const data = await response.json();
                showAlert('‚úÖ Guide saved successfully!', 'success');

            } catch (error) {
                console.error('Save error:', error);
                showAlert(`Error saving: ${error.message}`, 'error');
            }
        }

        async function exportPDF(destination, month, guideText) {
            try {
                const response = await fetch(`${API_URL}/api/export-pdf`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        destination: destination,
                        month: month,
                        guide_text: guideText
                    })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.detail || 'Failed to export PDF');
                }

                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `${destination.replace(/\s+/g, '_')}_${month}.pdf`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
                
                showAlert('‚úÖ PDF downloaded successfully!', 'success');

            } catch (error) {
                console.error('Export error:', error);
                showAlert(`Error exporting PDF: ${error.message}`, 'error');
            }
        }

        function markdownToHtml(markdown) {
            let html = markdown
                // Headers
                .replace(/^### (.*?)$/gm, '<h3>$1</h3>')
                .replace(/^## (.*?)$/gm, '<h2>$1</h2>')
                .replace(/^# (.*?)$/gm, '<h1>$1</h1>')
                // Bold
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                .replace(/__(.*?)__/g, '<strong>$1</strong>')
                // Italic
                .replace(/\*(.*?)\*/g, '<em>$1</em>')
                .replace(/_(.*?)_/g, '<em>$1</em>')
                // Line breaks
                .replace(/\n\n/g, '</p><p>')
                .replace(/\n/g, '<br>')
                // Lists
                .replace(/^\* (.*?)$/gm, '<li>$1</li>')
                .replace(/^\- (.*?)$/gm, '<li>$1</li>')
                .replace(/(<li>.*?<\/li>)/s, '<ul>$1</ul>')
                // Remove coordinate blocks and page breaks
                .replace(/\(---PAGE BREAK---\)[^\n]*/gi, '')
                .replace(/---PAGE BREAK---[^\n]*/gi, '')
                .replace(/\(---page break---\)[^\n]*/gi, '')
                .replace(/COORDINATES[\s\S]*?(?=##|###|$)/gi, '')
                .replace(/List \d+-\d+ major locations[\s\S]*?(?=##|###|$)/gi, '');

            return `<p>${html}</p>`.replace(/<p><\/p>/g, '');
        }

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = type;
            alertDiv.textContent = message;
            alertDiv.style.cssText = 'margin: 15px 30px 0;';
            alertContainer.appendChild(alertDiv);

            setTimeout(() => alertDiv.remove(), 5000);
        }

        function clearAlerts() {
            alertContainer.innerHTML = '';
        }

        async function showMyTrips() {
            clearAlerts();
            contentArea.innerHTML = '<div class="loading"><div class="spinner"></div><p>Loading your trips...</p></div>';

            try {
                const response = await fetch(`${API_URL}/api/itineraries`);
                if (!response.ok) throw new Error('Failed to load trips');

                const data = await response.json();
                
                if (data.trips.length === 0) {
                    contentArea.innerHTML = `
                        <div class="initial-state">
                            <h3>No saved trips yet</h3>
                            <p>Generate a guide and save it to see it here</p>
                        </div>
                    `;
                    return;
                }

                const tripsHtml = `
                    <div style="grid-column: 1 / -1; padding: 20px;">
                        <h2>üìö My Saved Trips</h2>
                        <div style="display: grid; gap: 15px; margin-top: 20px;">
                            ${data.trips.map(trip => `
                                <div class="location-item" style="display: flex; justify-content: space-between; align-items: center;">
                                    <div onclick="viewTrip(${trip.id})" style="flex: 1; cursor: pointer;">
                                        <div class="name">${trip.destination}</div>
                                        <div class="coords">${new Date(trip.created_at).toLocaleDateString()}</div>
                                    </div>
                                    <div class="button-group" style="margin: 0;">
                                        <button onclick="event.stopPropagation(); viewTrip(${trip.id})" style="padding: 8px 15px;">View</button>
                                        <button onclick="event.stopPropagation(); deleteTrip(${trip.id})" style="padding: 8px 15px; background: #dc3545;">Delete</button>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
                contentArea.innerHTML = tripsHtml;

            } catch (error) {
                console.error('Error loading trips:', error);
                showAlert(`Error loading trips: ${error.message}`, 'error');
            }
        }

        async function viewTrip(tripId) {
            clearAlerts();
            contentArea.innerHTML = '<div class="loading"><div class="spinner"></div><p>Loading trip details...</p></div>';

            try {
                const response = await fetch(`${API_URL}/api/itinerary/${tripId}`);
                if (!response.ok) throw new Error('Failed to load trip');

                const data = await response.json();
                
                // Replicate exactly what displayResults does
                const mapHtml = `<div id="map"></div>`;
                const intelHtml = `
                    <div>
                        <div class="intel-section">
                            <div style="margin-bottom: 20px;">
                                <button onclick="showMyTrips()" style="margin-bottom: 10px;">‚Üê Back to My Trips</button>
                                <h2>${data.destination}</h2>
                            </div>
                            <div class="intel-content">
                                ${markdownToHtml(data.guide_text)}
                            </div>
                            ${data.locations && data.locations.length > 0 ? `
                                <div class="location-list">
                                    <h3>üìç Locations (${data.locations.length})</h3>
                                    ${data.locations.map((loc, i) => `
                                        <div class="location-item" onclick="focusLocation(${loc.lat}, ${loc.lon})">
                                            <div class="name">${loc.name}</div>
                                            <div class="coords">${loc.lat.toFixed(4)}, ${loc.lon.toFixed(4)}</div>
                                        </div>
                                    `).join('')}
                                </div>
                            ` : ''}
                            <div class="button-group">
                                <button onclick="exportPDF('${data.destination}', '', \`${data.guide_text.replace(/`/g, '\\`').replace(/\$/g, '\\$')}\`)">üìÑ Export PDF</button>
                            </div>
                            <div class="chat-section">
                                <h3>Ask a Question</h3>
                                <div class="chat-group">
                                    <input 
                                        type="text" 
                                        id="chatInput" 
                                        placeholder="Ask about the guide..."
                                        data-guide="${encodeURIComponent(data.guide_text)}"
                                    >
                                    <button onclick="sendChat(this)">Ask</button>
                                </div>
                                <div id="chatResponse"></div>
                            </div>
                        </div>
                    </div>
                `;

                contentArea.innerHTML = mapHtml + intelHtml;

                // Initialize map after DOM update
                setTimeout(() => {
                    if (data.locations && data.locations.length > 0) {
                        initializeMap(data.locations);
                    } else {
                        document.getElementById('map').innerHTML = '<p style="padding: 20px; text-align: center; color: #999;">No locations found in the guide</p>';
                    }
                }, 0);

            } catch (error) {
                console.error('Error viewing trip:', error);
                showAlert(`Error viewing trip: ${error.message}`, 'error');
            }
        }

        async function deleteTrip(tripId) {
            if (!confirm('Are you sure you want to delete this trip?')) return;

            try {
                const response = await fetch(`${API_URL}/api/itinerary/${tripId}`, {
                    method: 'DELETE'
                });

                if (!response.ok) throw new Error('Failed to delete trip');

                showAlert('‚úÖ Trip deleted successfully!', 'success');
                showMyTrips(); // Refresh the list

            } catch (error) {
                console.error('Error deleting trip:', error);
                showAlert(`Error deleting trip: ${error.message}`, 'error');
            }
        }

        // Check API availability on load
        window.addEventListener('load', async () => {
            try {
                const response = await fetch(`${API_URL}/health`);
                if (!response.ok) {
                    console.warn('API may not be available');
                }
            } catch (error) {
                console.warn('API not reachable:', error);
                showAlert('‚ö†Ô∏è Warning: API server may not be running. Make sure to start the backend with: python -m uvicorn api:app --host 0.0.0.0 --port 8000', 'error');
            }
        });
    </script>
</body>
</html>
